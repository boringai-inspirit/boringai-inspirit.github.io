---
import '@fontsource-variable/dm-sans';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'DM Sans Variable';
    --aw-font-serif: 'DM Sans Variable';
    --aw-font-heading: 'DM Sans Variable';

    --aw-color-primary: #66cc8a;
    --aw-color-secondary: #377cfb;
    --aw-color-accent: #f68067;

    --aw-color-text-heading: #333c4d;
    --aw-color-text-default: #333c4d;
    --aw-color-text-muted: #6f7682;
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: #121c23;

    ::selection {
      background-color: rgb(57 210 192 / 30%);
    }
  }

  .dark {
    --aw-font-sans: 'DM Sans Variable';
    --aw-font-serif: 'DM Sans Variable';
    --aw-font-heading: 'DM Sans Variable';

    --aw-color-primary: #66cc8a;
    --aw-color-secondary: #377cfb;
    --aw-color-accent: #f68067;

    --aw-color-text-heading: #f9fafb;
    --aw-color-text-default: #f9fafb;
    --aw-color-text-muted: #acb1b8;
    --aw-color-bg-page: #121c23;

    ::selection {
      background-color: rgb(57 210 192 / 30%);
    }
  }
</style>
